@{
    ViewBag.Title = "Elsevier :: Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<div class="login">
    <div>
      <div>Username:</div> <input id="tbUsername" type="text" name="name"/>
    </div>
    <div><div>Password:</div><input id="tbPassword" type="password" name="name"/></div>
    <div style="padding-top:10px;">

        <a href="#" class="relatedSearch" onclick="loginUser();return false;">Login</a>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $('#tbUsername').focus();
        ini.eventHandlers.registerEnterClick(function () {
            loginUser();
        });
    });
    function loginUser() {
        var username = $("#tbUsername").val();
        var password = $("#tbPassword").val();
        $.post('@(Url.Action("Login", "Login"))', { username: username, password: password }, function (result) {
            if (result.success) {
                window.location.href = '@Url.Action("Index", "Home")';
            } else {
                alert("Username or password is incorrect");
            }
        });

    }
</script>
